<div class="row justify-content-md-center mt-5">
  <div class="col-md-12 text-center">
    <h1>ログイン</h1>
  </div>
  <div class="col-md-6 mt-3">
    <% flash.each do |message_type, message| %>
      <div class="mt-3 alert alert-<%= message_type %>"><%= message %></div>
    <% end %>

    <%= form_with url: login_path, method: :post, local: true, scope: 'session' do |f| %>
      <div class="form-group">
        <%= f.label :user_id, 'User ID' %>
        <%= f.text_field :user_id, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit 'ログイン', class: 'form-control btn btn-primary' %>
        <small class="form-text text-muted">
          <%= link_to 'ユーザ登録', controller: :users, action: :new%>はお済みですか?
        </small>
      </div>

    <% end %>
  </div>
</div>
