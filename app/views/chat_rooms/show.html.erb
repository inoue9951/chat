<div class="row mt-3">
  <div class="col-md-12">
    <h4 class=""><%= @chat_room.title %></h4>
    <h6>Description</h6>
    <p class="mb-0"><%= @chat_room.description %></p>
    <hr>
  </div>
  <div id="chat-area" class="col-md-12 mt-3 chat-area">
  </div>
</div>

<div class="container fixed-bottom">
  <div class="row">
    <div class="col-md-12 mb-3">
      <div class="input-group">
        <textarea id="message-form" class="form-control message-form" rows="1" data-behavior="speak_chat_messages"></textarea>
        <input type='hidden' id="user-id" value="<%= @current_user.id %>">
        <input type='hidden' id="room-id" value="<%= @chat_room.id %>">
        <span class="input-group-btn">
          <button id="send-btn" class="btn btn-primary" type="button">送信</button>
        </span>
      </div>
    </div>
  </div>
</div>
